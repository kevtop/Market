@model Market.ViewModels.OrderDetailView


    @{
        ViewBag.Title = "Details";
    }

    <h2>Detalles para orden: @Model.Order.OrderID del cliente @Model.Order.Customer.FullName</h2>
    
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product.ProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDetail.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Order.OrderDetails)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
        </tr>
        }

    </table>

</table>